{
    "name": "doppiogancio/mocked-client",
    "description": "A simple way to mock a client",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.4|^8.0",
        "league/route": ">=4.5",

        "psr/log": "^1.0|^2.0|^3.0",
        "psr/http-factory": "^1.0",

        "psr/http-factory-implementation": "^1.0",
        "psr/http-message-implementation": "^1.0"
    },
    "require-dev": {
        "php-http/discovery": "^1.13",
        "guzzlehttp/guzzle": "^6.0|^7.0",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "*",
        "slevomat/coding-standard": "^7.0",
        "phpstan/phpstan": "^0.12.94",
        "doctrine/coding-standard": "^9.0",
        "monolog/monolog": "^2.3"
    },
    "authors": [
        {
            "name": "Fabrizio Gargiulo",
            "email": "fabrizio.gargiulo@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "DoppioGancio\\MockedClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DoppioGancio\\MockedClientTests\\": "tests/"
        }
    },
    "scripts": {
        "tests": "phpunit",
        "phpstan": "phpstan analyse",
        "cs-fix": "phpcbf --standard=Doctrine src/ tests/",
        "cs-check": "phpcs --standard=Doctrine src/ tests/",
        "code-review": [
            "@cs-fix",
            "@phpstan",
            "@tests"
        ]
    }
}
